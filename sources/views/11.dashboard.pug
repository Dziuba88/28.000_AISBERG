extends layouts/baseLayout
block variables
  - var pageTitle = 'DASHBOARD'
block header
  .b__header--content
    .row.middle
      .col.md__4
        h1.page--title Dashboard
    .b__header--list: .row
      .col.xs__6.sm__3: .item
        .item__title ANN Signals per Day
        .item__info
          svg.item__info--icon: use(xlink:href="#up-icon")
          .item__info--value 180 
          .item__info--helper.text__success +10% 
      .col.xs__6.sm__3: .item
        .item__title Total Accuracy
        .item__info
          svg.item__info--icon: use(xlink:href="#down-icon")
          .item__info--value 86% 
          .item__info--helper.text__danger -10% 
      .col.xs__6.sm__3: .item
        .item__title Trading Pair
        .item__info
          .item__info--value +10%
          .item__info--helper.text__darkgrey 0% 
      .col.xs__6.sm__3: .item
        .item__title Cripto Exchanges
        .item__info
          .item__info--value 4
